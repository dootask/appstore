            "post": {
                "description": "通过URL下载并安装应用",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "内部接口"
                ],
                "summary": "通过URL下载应用",
                "parameters": [
                    {
                        "description": "下载参数",
                        "name": "request",
                        "in": "body",
                        "required": true,
